{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "es2015",
        "module": "commonjs",
        "outDir": "lib",
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
          "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
          "*": [ "*", "src/*"]
        },
        "plugins": [
          {
            "name": "tslint-language-service"
          }
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
